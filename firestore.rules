rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User profiles - Essential for Custom Password Login demo
    match /users/{userId} {
      allow read: if true; 
      allow create: if true; 
      allow update: if true; // Relaxed for custom password login support
      allow delete: if isOwner(userId);
    }

    // Health records - Patients can only access their own, ASHA workers can read (need role check logic if roles are in user doc)
    match /health_records/{recordId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid || request.auth.uid == userId);
      // Note: A more complex ASHA worker check would involve checking the 'role' field in the /users/{uid} document
    }

    // Static data like Yoga poses or Schemes (read-only for all authenticated users)
    match /yoga_poses/{poseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin via Firebase Console
    }

    match /schemes/{schemeId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}
